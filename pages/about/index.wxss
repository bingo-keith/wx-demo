/**index.wxss**/

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 60rpx;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #fff;
    font-size: 40rpx;
}

.about-container-items {
    padding: 20rpx 30rpx;
    position: relative;
    font-family: "Source Han Sans CN";
    font-size: 34rpx;
}

.about-items-right {
    position: absolute;
    top: 25rpx;
    right: 30rpx;
    font-family: '黑体';
    font-weight: bold;
}
